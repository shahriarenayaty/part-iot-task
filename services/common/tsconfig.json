{
	"compilerOptions": {
		"target": "ES2021",
		"module": "CommonJS",
		"declaration": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
